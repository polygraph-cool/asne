.intro
	margin 0 auto
	padding 5rem 1rem 2.5rem 1rem
	background-color darken($off-white, 5)
	&__hed
		font-weight bold
		max-width 60rem
		margin 0 auto
		padding-top 5rem
		text-align center
		set-type-size('xx-large', true)
		+mq('bp-2')
			set-type-size('xxx-large', true)
		+mq('bp-3')
			set-type-size('xxxx-large', true)
	
	&__byline
		set-type-size('small', true)
		text-align center
		padding-top 5rem
		
	&__dek
		max-width 40rem
		margin 0 auto
		padding-top 1rem
		set-type-size('medium', true)
		text-align center